    public void setUsuario(String usuario) {
        this.usuario = usuario;
        jTabbedPane1.removeAll();
        try {
            List<Object[]> notas = Constantes.db.getNotas(usuario);
            for (Object[] datos : notas) {
                jTabbedPane1.add(datos[0].toString(), new NotaConfig(datos, jToggleButton1.isSelected(), editarNotas));
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
