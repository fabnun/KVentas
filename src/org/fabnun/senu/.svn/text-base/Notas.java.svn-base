    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        String titulo = JOptionPane.showInputDialog("Titulo de la Nota?", "");
        if (titulo != null) {
            try {
                Constantes.db.nuevaNota(titulo, usuario, "", -1646052, -16777216, null, 0, "1", "");
                Object[] datos = new Object[]{
                    titulo, usuario, "", -1646052, -16777216, null, 0, "1", ""
                };
                jTabbedPane1.add(titulo, new NotaConfig(datos, jToggleButton1.isSelected(), editarNotas));
            } catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Existe una nota con el mismo titulo");
            }
        }
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        int idx = jTabbedPane1.getSelectedIndex();
        String titulo = jTabbedPane1.getTitleAt(idx);
        if (JOptionPane.showConfirmDialog(this, "Desea eliminar la nota: " + titulo + "?", "Eliminar Nota", JOptionPane.YES_NO_OPTION) == 0) {
            try {
                Constantes.db.eliminarNota(titulo, usuario);
                jTabbedPane1.remove(idx);
            } catch (Exception e) {
                JOptionPane.showMessageDialog(this, "Error al eliminar nota");
            }
        }
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jToggleButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jToggleButton1ActionPerformed
        int size = jTabbedPane1.getComponentCount();
        boolean selected = jToggleButton1.isSelected();
        for (int i = 0; i < size; i++) {
            NotaConfig nt = (NotaConfig) jTabbedPane1.getComponent(i);
            nt.setConfigVisible(selected);
        }
    }//GEN-LAST:event_jToggleButton1ActionPerformed
